---
import { skills } from '../data/skills';
---
<section id="skills" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Habilidades</h2>
      <div class="w-20 h-1 bg-indigo-600 mx-auto"></div>
      <p class="mt-4 text-gray-600 dark:text-gray-300 text-lg">
        Tecnolog√≠as y herramientas que domino
      </p>
    </div>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {skills.map((category) => (
        <div class="bg-white dark:bg-gray-900 rounded-xl p-6 shadow-lg hover:shadow-xl transition-shadow">
          <div class="text-3xl mb-4">{category.icon}</div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">
            {category.category}
          </h3>
          <ul class="space-y-2">
            {category.items.map((skill) => (
              <li class="flex items-center text-gray-600 dark:text-gray-300">
                <svg class="w-5 h-5 text-indigo-600 dark:text-indigo-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                {skill}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </div>
</section>
