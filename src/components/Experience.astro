---
import { experience } from '../data/experience';
---
<section id="experiencia" class="py-20 bg-white dark:bg-gray-900">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Experiencia Profesional</h2>
      <div class="w-20 h-1 bg-indigo-600 mx-auto"></div>
    </div>
    
    <div class="relative">
      <!-- Línea vertical del timeline -->
      <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 h-full w-1 bg-indigo-200 dark:bg-indigo-900"></div>
      
      <div class="space-y-12">
        {experience.map((job, index) => (
          <div class={`relative grid md:grid-cols-2 gap-8 ${index % 2 === 0 ? '' : 'md:flex-row-reverse'}`}>
            {/* Lado izquierdo o derecho según el índice */}
            <div class={index % 2 === 0 ? 'md:text-right' : 'md:col-start-2'}>
              <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow">
                <div class="inline-block px-3 py-1 bg-indigo-100 dark:bg-indigo-900 text-indigo-600 dark:text-indigo-400 rounded-full text-sm font-semibold mb-3">
                  {job.period}
                </div>
                <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                  {job.position}
                </h3>
                <h4 class="text-lg text-indigo-600 dark:text-indigo-400 font-semibold mb-3">
                  {job.company}
                </h4>
                <p class="text-gray-600 dark:text-gray-300 mb-4">
                  {job.description}
                </p>
                <div class="flex flex-wrap gap-2">
                  {job.technologies.map((tech) => (
                    <span class="px-3 py-1 bg-white dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-full text-sm border border-gray-200 dark:border-gray-600">
                      {tech}
                    </span>
                  ))}
                </div>
              </div>
            </div>
            
            {/* Punto en el centro del timeline */}
            <div class="hidden md:flex absolute left-1/2 transform -translate-x-1/2 w-4 h-4 bg-indigo-600 rounded-full border-4 border-white dark:border-gray-900 z-10"></div>
            
            {/* Espacio vacío para mantener el grid */}
            <div class={index % 2 === 0 ? 'md:col-start-2' : 'md:col-start-1'}></div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
